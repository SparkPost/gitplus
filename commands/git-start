#!/usr/bin/env sh

##
# Usage
#
# Start a FAD-1234 branch (off main by default)
# $ git start FAD-1234
#
# Start a FAD-1234 branch off main, as specified
# $ git start FAD-1234 main
#
##

# exit on error
set -e

if [[ $1 = '' ]]; then
  echo "Please specify a name (e.g. FAD-1234)"
  exit 255
fi

BRANCH='main'
[[ $2 != '' ]] && BRANCH=$2

git checkout $BRANCH
git pull origin $BRANCH
git checkout -b $1
